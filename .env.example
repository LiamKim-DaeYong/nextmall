# ===========================================
# NextMall Environment Variables
# Copy this file to .env and fill in the values
# ===========================================

# -----------------------------
# Database - Auth Service
# -----------------------------
AUTH_DB_URL=jdbc:postgresql://localhost:5432/nextmall
AUTH_DB_USERNAME=nextmall
AUTH_DB_PASSWORD=your-password

# -----------------------------
# Database - User Service
# -----------------------------
USER_DB_URL=jdbc:postgresql://localhost:5432/nextmall
USER_DB_USERNAME=nextmall
USER_DB_PASSWORD=your-password

# -----------------------------
# Database - Product Service
# -----------------------------
PRODUCT_DB_URL=jdbc:postgresql://localhost:5432/nextmall
PRODUCT_DB_USERNAME=nextmall
PRODUCT_DB_PASSWORD=your-password

# -----------------------------
# Database - Order Service
# -----------------------------
ORDER_DB_URL=jdbc:postgresql://localhost:5432/nextmall
ORDER_DB_USERNAME=nextmall
ORDER_DB_PASSWORD=your-password

# -----------------------------
# Redis
# -----------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -----------------------------
# Kafka
# -----------------------------
KAFKA_PORT=9092
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# -----------------------------
# Identifier (Snowflake)
# -----------------------------
NODE_ID=1

# -----------------------------
# Token Configuration - External
# (Client-facing tokens: Access + Refresh)
# -----------------------------
# Access token expiration in milliseconds (e.g., 3600000 = 1 hour)
TOKEN_EXTERNAL_ACCESS_EXPIRATION=3600000

# Refresh token expiration in milliseconds (e.g., 1209600000 = 14 days)
# Must be greater than access token expiration
TOKEN_EXTERNAL_REFRESH_EXPIRATION=1209600000

# RSA Private Key for JWT signing (base64 encoded PKCS#8 format)
# Generate with: openssl genrsa -out private.pem 2048
#                openssl pkcs8 -topk8 -inform PEM -outform PEM -nocrypt -in private.pem | base64 -w 0
TOKEN_EXTERNAL_PRIVATE_KEY=your-base64-encoded-private-key

# RSA Public Key for JWT verification (base64 encoded X.509 format)
# Generate with: openssl rsa -in private.pem -pubout | base64 -w 0
TOKEN_EXTERNAL_PUBLIC_KEY=your-base64-encoded-public-key

# -----------------------------
# Token Configuration - Passport
# (Service-to-service internal tokens)
# -----------------------------
# HMAC secret for service authentication (base64 encoded, min 256 bits / 32 bytes)
TOKEN_PASSPORT_SECRET=your-base64-encoded-service-secret
